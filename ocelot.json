{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/pinger/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "pinger-api",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/pinger/{everything}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/authorization/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authorization-api",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/authorization/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/book/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-api",
          "Port": 5003
        }
      ],
      "UpstreamPathTemplate": "/api/book/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://0.0.0.0:5000"
  }
}